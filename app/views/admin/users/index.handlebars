<div class="col-lg-12 col-12 mb-30">
    <div class="box">

        <div class="box-head d-flex align-items-center justify-content-between">


            {{#if success}}
            <div class="alert alert-solid-success alert-dismissible fade show" role="alert"
                style="position: absolute;top: 10%;left: 50%;transform: translate(-50%,-50%)">
                {{success}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            {{/if}}


            <h4 class="title">کاربران عضو سایت</h4>
            <a href="/admin/users/create">
                <button class="button button-dark">
                    <span>ایجاد کاربر جدید</span>
                </button>
            </a>
        </div>
        <div class="box-body">
            <table class="table table-dark table-hover">
                <thead style="background-color: #4051B5;">
                    <tr>
                        <th>#</th>
                        <th>نام کامل</th>
                        <th>ایمیل</th>
                        <th style="width: 150px !important;overflow:hidden;">رمز عبور</th>
                        <th>نقش</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.full_name}}</td>
                        <td>{{this.email}}</td>
                        <td>
                            <p style="width: 300px !important;overflow:auto;">{{this.password}}</p>
                        </td>
                        <td>{{#roles this.role}}{{/roles}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>