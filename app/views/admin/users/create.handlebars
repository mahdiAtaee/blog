<div class="container">
    <div class="row">
        <div class="col-lg-6 col-12 mb-20">

            <h6 class="mb-40" style="font-size: 1.2rem;">ایجاد کاربر جدید</h6>
            {{#if errors}}
            <div class="alert alert-solid-danger alert-dismissible fade show" role="alert">
                {{#each errors}}
                <p>{{this}}</p>
                {{/each}}
            </div>
            {{/if}}

            <form action="/admin/users/store" method="post">
                <div class="row mbn-15">
                    <div class="col-12 mb-15">
                        <input type="text" name="user_name" class="form-control {{#if errors}}danger{{/if}}" placeholder="نام کامل کاربر">
                    </div>
                    <div class="col-12 mb-15">
                        <input type="email" name="user_email" class="form-control {{#if errors}}danger{{/if}}" placeholder="ایمیل">
                    </div>
                    <div class="col-12 mb-15">
                        <input type="password" name="user_password" class="form-control {{#if errors}}danger{{/if}}"
                            placeholder="کلمه عبور"></input>
                    </div>
                </div>

                <div class="adomx-checkbox-radio-group">
                    <h6 class="my-2 mt-20">نقش کاربر</h6>

                    <label class="adomx-radio">
                        <input type="radio" name="role" value="1">
                        <i class="icon"></i>
                        admin
                    </label>
                    <label class="adomx-radio">
                        <input type="radio" name="role" value="0">
                        <i class="icon"></i>
                        user
                    </label>
                </div>

                <button type="submit" class="button button-primary mt-4">
                    <span>ذخیره سازی</span>
                </button>
            </form>
        </div>
    </div>
</div>