<div class="container">
    <div class="row">
        <div class="col-md-12 mb-30">
            <div class="box">
                <div class="box-head d-flex justify-content-between">
                    <h4 class="title" style="font-size: 1.3rem;">دیدگاه ها</h4>
                </div>
                {{#if hasErrors}}
                {{#each errors}}

                <div class="alert alert-danger" role="alert">
                    <strong> هشدار! </strong>{{this}}
                    <button class="close" data-dismiss="alert"><i class="zmdi zmdi-close"></i></button>
                </div>

                {{/each}}
                {{/if}}


                {{#if success}}
                {{#each success}}

                <div class="alert alert-success" role="alert" aria-label="Close"
                    style="width: 300px; text-align: center;  margin-right: auto; margin-left: auto;">
                    <strong> {{this}} </strong>
                    <button class="close" data-dismiss="alert"><i class="zmdi zmdi-close"></i></button>
                </div>

                {{/each}}
                {{/if}}
                <div class="box-body">
                    <div class="table-responsive" style="overflow-x: unset;">
                        <table class="table table-vertical-middle">
                            <thead>
                                <tr style="background-color: #161824;color: #fff;">
                                    <th>نویسنده</th>
                                    <th>دیدگاه</th>
                                    <th>ایمیل</th>
                                    <th>شماره تماس</th>
                                    <th>ارسال شده</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each comments}}
                                <tr class="{{commentBg this.status}}">
                                    <td class="d-flex align-items-center">
                                        <a href="#">{{this.full_name}}</a>
                                    </td>
                                    <td class="custom-comments">
                                        <a href="/admin/comments/show/{{this.id}}"
                                            style="width: 200px;overflow: hidden;">
                                            {{this.comment}}
                                        </a>
                                        <div class="control_button">
                                            <a href="/admin/comments/approve/{{this.id}}">
                                                <button class="button button-success button-xs">
                                                    <span>تایید</span>
                                                </button>
                                            </a>
                                            <a href="/admin/comments/reject/{{this.id}}">
                                                <button class="button button-warning button-xs">
                                                    <span>رد</span>
                                                </button>
                                            </a>
                                            <a href="/admin/comments/delete/{{this.id}}">
                                                <button class="button button-danger button-xs">
                                                    <span>حذف</span>
                                                </button>
                                            </a>
                                        </div>
                                    </td>
                                    <td>{{this.email}}</td>
                                    <td>{{this.phone}}</td>
                                    <td>{{this.persian_created_at}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>